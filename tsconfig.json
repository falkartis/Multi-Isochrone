{
	"compilerOptions": {
		"target": "es6",
		"module": "es2015",
		"rootDir": "./packages",
		"outDir": "./dist",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"skipLibCheck": false
	},
	"include": [
		"./packages/**/*"
	]
}